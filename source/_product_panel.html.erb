<% content_for :javascript do %>
<script>
$('[name="product"]').click(function(){
	var all_labels = $('[name="product"]').parent().find("label");
	var selected_label = $(this).parent().find("label")
	$(".selected-product-name").html($(this).attr("data-name"));
	$(".selected-product-price").html("selection:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;" + $(this).attr("data-price"));
	all_labels.html("select");
	all_labels.removeClass("btn-default");
	all_labels.addClass("btn-primary")
	selected_label.addClass("btn-default");
	selected_label.removeClass("btn-primary")
	selected_label.html("selected " + $(this).attr("data-name"));
	$("#product_panel .continue").removeClass("hide");
});
</script>
<% end %>