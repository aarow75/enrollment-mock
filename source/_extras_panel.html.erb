		</table>
		<div class="text-center continue hide">
			<%= link_to "continue", "#enroll3", "data-toggle" => "collapse", "data-parent" => ".panel-group", onclick: 'panel_complete("#extras_panel");', class: "btn btn-primary btn-lg" %>
